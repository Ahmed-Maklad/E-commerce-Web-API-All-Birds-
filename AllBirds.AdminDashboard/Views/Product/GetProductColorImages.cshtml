@model ResultView<GetOneProductColorDTO>;

@section Navbar {

    <partial name="_NavbarPartial" />
}
@section Sidebar {

    <partial name="_SidebarPartial" />
}
@section Footer {

    <partial name="_FooterPartial" />
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Product Color Images</h4>

                <div class="table-responsive ">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ProductNo</th>
                                <th>Product NameEn </th>
                                <th>Product NameAr </th>
                                <th>ColorNameEn </th>
                                <th>Color NameAr </th>
                                <th>ColorCode </th>
                                <th>Sizes </th>
                                <th>Images </th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.IsSuccess)
                            {
                                
                                   
                                    @foreach (string Image in Model.Data.Images)
                                    {
                                    <tr>
                                        <td>@Model.Data.ProductNo</td>
                                        <td>@Model.Data.PNameEn</td>
                                        <td>@Model.Data.PNameAr</td>
                                        <td>@Model.Data.ColorNameEn</td>
                                        <td>@Model.Data.ColorNameAr</td>
                                        <td>@Model.Data.ColorCode</td>
                                        <td>
                                        @foreach (string size in Model.Data.Sizes)
                                        {
                                                <span> @size |</span>
                                        }
                                         </td>
                                        <td alt="Product Image"><img src="@Image" style="width: 90px; height: 90px; border-radius: 20px;" alt="Alternate Text" /></td>
                                    </tr>
                                    }

                                

                               
                                
                            }

                            
                        </tbody>
                    </table>
                    <h5 style="color:deeppink;margin-top:10px; text-align:center"> @Model.Msg </h5>

                    <a type="button" class="btn  bg-primary bg- mr-2" asp-action="GetAllProductColors" asp-route-id="@Model.Data.ProductId">Product Color</a>
                </div>
            </div>
        </div>
    </div>
</div>