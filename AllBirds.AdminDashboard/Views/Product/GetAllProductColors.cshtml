@model List<GetALlProductColorDTO>;

@section Navbar {

    <partial name="_NavbarPartial" />
}
@section Sidebar {

    <partial name="_SidebarPartial" />
}
@section Footer {

    <partial name="_FooterPartial" />
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">All Product Color</h4>
                <p class="card-description">
                    <a class="btn btn-primary" asp-controller="Product" asp-route-id="@ViewBag.PrdId" asp-action="CreateProductColor"><i class="fas fa-plus"></i> New</a>
                </p>
                <div class="table-responsive ">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>product Number </th>
                                <th>product name </th>
                                <th>Color Name </th>
                                <th>Color </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model is not null)
                            {
                                @foreach (GetALlProductColorDTO item in Model)
                                {

                                    <tr>
                                        <td>
                                            <img src="@item.MainImagePath" alt="Product Image" style="width: 90px; height: 90px; border-radius: 20px;" />
                                        </td>
                                        <td>@item.ProductNo</td>

                                        <td>@item.PNameEn</td>
                                        <td>@item.ColorNameEn</td>
                                        <td><label class="badge  rounded text-light" style="background-color: @item.ColorCode; width: 35px;height: 35px; border-radius: 50%;">   </label></td>

                                        <td>
                                            <button class="btn btn-inverse-success for inverse buttons p-2  m-1">Edit</button>
                                            <button class="btn btn-inverse-danger  for inverse buttons p-2  m-1">Delete</button>

                                        </td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">There Are No Colors For This Product</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>